<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TennisPlanet</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TennisPlanet.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <style>
        .nav-item a{
            font-size:17px;
            font-weight:500;
        }
    </style>
</head>
<body>
    <header>
        <nav style="background: linear-gradient(to bottom right, #2eb305, #ffff00);" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid"  >
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"> <img src="~/images/Logo.png" height="85px" width="85px" /> TennisPlanet</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-black" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-house"></i> Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-black" asp-area="" asp-controller="Home" asp-action="Contacts"><i class="bi bi-telephone"></i> Contacts</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-black" asp-area="" asp-controller="Contact" asp-action="Create"><i class="bi bi-envelope-arrow-up"></i> Report</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-black" asp-area="" asp-controller="Product" asp-action="Index"><i class="bi bi-bag"></i> All Products</a>
                        </li>

                        
                        <li class="nav-item dropdown" id="myDropdown">
                            <a class="nav-link dropdown-toggle text-black" href="#" data-bs-toggle="dropdown"><i class="bi bi-archive"></i> Items </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item text-black" href="#"> Brands &raquo; </a>
                                    <ul class="submenu dropdown-menu">
                                        <li><a class="dropdown-item text-black" asp-controller="Product" asp-action="Index" asp-route-searchStringBrandName="Wilson">Wilson</a></li>
                                        <li><a class="dropdown-item text-black" asp-controller="Product" asp-action="Index" asp-route-searchStringBrandName="Babolat">Babolat</a></li>
                                        <li><a class="dropdown-item text-black" asp-controller="Product" asp-action="Index" asp-route-searchStringBrandName="Head">Head</a></li>
                                        <li><a class="dropdown-item text-black" asp-controller="Product" asp-action="Index" asp-route-searchStringBrandName="Yonex">Yonex</a></li>
                                        <li><a class="dropdown-item text-black" asp-controller="Product" asp-action="Index" asp-route-searchStringBrandName="Dunlop">Dunlop</a></li>
                                        <li><a class="dropdown-item text-black" asp-controller="Product" asp-action="Index" asp-route-searchStringBrandName="Tecnifibre">Tecnifibre</a></li>
                                        <li><a class="dropdown-item text-black" asp-controller="Product" asp-action="Index" asp-route-searchStringBrandName="Asics">Asics</a></li>
                                        <li><a class="dropdown-item text-black" asp-controller="Product" asp-action="Index" asp-route-searchStringBrandName="Nike">Nike</a></li>
                                        <li><a class="dropdown-item text-black" asp-controller="Product" asp-action="Index" asp-route-searchStringBrandName="Adidas">Adidas</a></li>
                                        <li><a class="dropdown-item text-black" asp-controller="Product" asp-action="Index" asp-route-searchStringBrandName="Lacoste">Lacoste</a></li>
                                    </ul>
                                </li>
                                <li>
                                    <a class="dropdown-item text-black" href="#"> Category &raquo;</a>
                                    <ul class="submenu dropdown-menu">
                                        <li><a class="dropdown-item text-black" href="/Product?searchStringCategoryName=Tennis racket">Tennis racket</a></li>
                                        <li><a class="dropdown-item text-black" href="/Product?searchStringCategoryName=T-shirt">T-shirt</a></li>
                                        <li><a class="dropdown-item text-black" href="/Product?searchStringCategoryName=Accessory">Accessory</a></li>
                                        <li><a class="dropdown-item text-black" href="/Product?SearchStringCategoryName=Antivibrators">Antivibrators</a></li>
                                        <li><a class="dropdown-item text-black" href="/Product?SearchStringCategoryName=Cordage">Cordage</a></li>
                                        <li><a class="dropdown-item text-black" href="/Product?SearchStringCategoryName=Sack">Sack</a></li>
                                        <li><a class="dropdown-item text-black" href="/Product?SearchStringCategoryName=Shoe">Shoe</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Wishlist" asp-action="Index">Wishlist</a>
                            </li>
       
                        @if ((this.User.Identity.IsAuthenticated) && (this.User.IsInRole("Administrator")))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-black" asp-area="" asp-controller="Contact" asp-action="Index">Messages</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-black" asp-area="" asp-controller="ProductItem" asp-action="Create">Create product item</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-black" asp-area="" asp-controller="Product" asp-action="Create">Delivery product</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-black" asp-area="" asp-controller="ProductItem" asp-action="Index"><i class="bi bi-backpack"></i> All Product items</a>
                            </li>
                            <li class="dropdown">
                                <button class="btn dropdown-toggle" type="button" id="dropdownMenuButton1"
                                        data-bs-toggle="dropdown" aria-expanded="false">
                                    Statistic Modul
                                </button>

                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                    <li><a class="dropdown-item text-black" href="/Client/Index">Clients</a></li>
                                    <li><a class="dropdown-item text-black" href="/Statistics/Index">Statistic</a></li>
                                </ul>
                            </li>

                        }

                    </ul>
                    
                    
                     <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <style> /*za navbara */
        .nav-item:hover {
            border: 1px solid #000000; /* Цветът на рамката*/
            border-radius: 20px; /* Стилизиране на краищата на рамката */
        }
    </style>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - TennisPlanet - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
