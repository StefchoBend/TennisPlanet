<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TennisPlanet</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TennisPlanet.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">TennisPlanet</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Index">All Products</a>
                        </li>
                        @if (this.User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Order" asp-action="MyOrders">My Orders</a>
                            </li>
                        }
                        <li class="nav-item dropdown" id="myDropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown"> Items </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" href="#"> Brands &raquo; </a>
                                    <ul class="submenu dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="ProductItem" asp-action="Index" asp-route-searchStringBrandName="Wilson">WILSON</a></li>
                                        <li><a class="dropdown-item" asp-controller="ProductItem" asp-action="Index" asp-route-searchStringBrandName="Babolat">BABOLAT</a></li>
                                        <li><a class="dropdown-item" asp-controller="ProductItem" asp-action="Index" asp-route-searchStringBrandName="Head">HEAD</a></li>
                                        <li><a class="dropdown-item" asp-controller="ProductItem" asp-action="Index" asp-route-searchStringBrandName="Yonex">YONEX</a></li>
                                        <li><a class="dropdown-item" asp-controller="ProductItem" asp-action="Index" asp-route-searchStringBrandName="Dunlop">DUNLOP</a></li>
                                        <li><a class="dropdown-item" asp-controller="ProductItem" asp-action="Index" asp-route-searchStringBrandName="Tecnifibre">TECNIFIBRE</a></li>
                                    </ul>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#"> Category &raquo;</a>
                                    <ul class="submenu dropdown-menu">
                                        <li><a class="dropdown-item" href="/ProductItem?searchStringCategoryName=Tennis racket">Tennis racket</a></li>
                                        <li><a class="dropdown-item" href="/ProductItem?searchStringCategoryName=T-shirt">T-shirt</a></li>
                                        <li><a class="dropdown-item" href="/ProductItem?searchStringCategoryName=Accessory">Accessory</a></li>
                                        <li><a class="dropdown-item" href="/ProductItem?SearchStringCategoryName=Antivibrators">Antivibrators</a></li>
                                        <li><a class="dropdown-item" href="/ProductItem?SearchStringCategoryName=Cordage">Cordage</a></li>
                                        <li><a class="dropdown-item" href="/ProductItem?SearchStringCategoryName=Sack">Sack</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </li>

                        @if ((this.User.Identity.IsAuthenticated) && (this.User.IsInRole("Administrator")))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="ProductItem" asp-action="Create">Create product item</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Create">Delivery product</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="ProductItem" asp-action="Index">All Product items</a>
                            </li>
                            <li class="dropdown">
                                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1"
                                        data-bs-toggle="dropdown" aria-expanded="false">
                                    Statistic Modul
                                </button>

                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                    <li><a class="dropdown-item" href="/Client/Index">Clients</a></li>
                                    <li><a class="dropdown-item" href="/Statistics/Index">Statistic</a></li>
                                </ul>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - TennisPlanet - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
