@model IEnumerable<TennisPlanet.Models.Product.ProductIndexVM>
@{
    ViewData["Title"] = "Index";
}
<h1>All Products</h1>
@if ((this.User.Identity.IsAuthenticated) && (this.User.IsInRole("Administrator")))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}
